const int switchPin=2;
int switchVal= 0;


void setup() {
  // put your setup code here, to run once:
  pinMode(switchPin, INPUT);
  Serial.begin(9600);
}

void loop() {
  //스위치에서 밸류를 읽고 저장한다.
 switchVal= digitalRead(2);

 //시리얼 포트로 밸류를 전달한다
 Serial.println(switchVal);

 //비트를 읽는 중간중간 잠시 기다린다.
 delay(10);
}
